@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";


}


<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/Admin/Product/Index">Product</a>
        </li>
        <li class="breadcrumb-item active">Index</li>
    </ol>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> Product
            <a class="btn btn-outline-primary pull-right" href="/Admin/Product/Create"><i class="fa fa-edit"></i>Create</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>ShortDescription</th>
                            <th>Is Feature?</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.ProductId
                                </td>
                                <td>
                                    <img src="@Url.Content(item.ProfileImage)" height="40" />
                                </td>
                                <td>
                                    @item.ProductName
                                </td>
                                <td>
                                    @item.ShortDescription
                                </td>
                                <td>
                                    @item.IsFeature
                                </td>
                                <td>
                                   <a href="/Admin/Product/Edit?id=@item.ProductId">Edit</a>|
                                   <a href="/Admin/Product/Delete?id=@item.ProductId">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>