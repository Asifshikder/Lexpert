@model Product
@{
    ViewData["Title"] = "Delete";
}

@Html.AntiForgeryToken()
<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/Admin/Product/Index">Product</a>
        </li>
        <li class="breadcrumb-item active">Create</li>
    </ol>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i>Product
        </div>
        <div class="card-body">
            <div class="form-group">

                <form asp-area="Admin" asp-controller="Product" asp-action="DeleteConfirm" method="post" enctype="multipart/form-data">
                    @Html.HiddenFor(s => s.ProductId)
                    @Html.HiddenFor(s => s.FeatureImage1)
                    @Html.HiddenFor(s => s.FeatureImage2)
                    @Html.HiddenFor(s => s.FeatureImage3)
                    @Html.HiddenFor(s => s.FeatureImage4)
                    @Html.HiddenFor(s => s.FeatureImage5)
                    @Html.HiddenFor(s => s.ProfileImage)
                    @Html.HiddenFor(s => s.ProfileImage1)
                    @Html.HiddenFor(s => s.ProfileImage2)
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">Name</label>
                                <input class="form-control" asp-for="ProductName" disabled />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">Short Description</label>
                                <input class="form-control" asp-for="ShortDescription" disabled />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">Video Title</label>
                                <input class="form-control" asp-for="VideoName" disabled/>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">Video link(IFrame from youtube)</label>
                                <input class="form-control" asp-for="VideoUrl" disabled/>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">Descrption</label>
                                <textarea asp-for="Description" class="summernote" disabled></textarea>
                            </div>
                        </div>
                        
                        <div class="col-12 text-center">
                            <button class="btn btn-block btn-success" type="submit">Update</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>