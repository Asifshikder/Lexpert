@model IEnumerable<BlogPost>
@{
    ViewData["Title"] = "Index";

}

<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/Admin/Blog/Index">Blog</a>
        </li>
        <li class="breadcrumb-item active">Index</li>
    </ol>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> Blog
            <a href="/Admin/Blog/Create" class="pull-right"><i class="fa fa-plus"></i>Create</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model){
                            <tr>
                                <td>
                                    @item.BlogId
                                </td>
                                <td>
                                    <img src="@Url.Content(item.BlogImage)" height="50"/>
                                </td>
                                <td>
                                    @item.BlogTitle
                                </td>
                                <td>
                                   <a href="/Admin/Blog/Edit?id=@item.BlogId">Edit</a>
                                   <a href="/Admin/Blog/Delete?id=@item.BlogId">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>