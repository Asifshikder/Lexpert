@model SiteSetting
@{
    ViewData["Title"] = "Update";
}


<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/Admin/SiteSetting/Index">SiteSetting</a>
        </li>
        <li class="breadcrumb-item active">Create</li>
    </ol>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i>Pivacy
        </div>
        <div class="card-body">
            <div class="form-group">

                <form asp-area="Admin" asp-controller="SiteSetting" asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label class="control-label">
                            Is Blog Activated? <input class="" checked="checked"
                                                      id="IsBlogEnabled"
                                                      name="IsBlogEnabled"
                                                      type="checkbox"
                                                      value="true" />

                        </label>
                    </div>
                    <div class="form-group">
                        <label class="control-label">
                            Use small footer? <input class="" checked="checked"
                                                      id="UseSmallFooter"
                                                      name="UseSmallFooter"
                                                      type="checkbox"
                                                      value="true" />

                        </label>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
@section Scripts {

    <script>
        $(document).ready(function () {
            $('.dropify').dropify();
            $('.summernote').summernote({
                tabsize: 2,
                height: 500
            });
        });

    </script>
}