@model EmailSetting
@{
    ViewData["Title"] = "Index";
}


<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/Admin/EmailSetting/Index">EmailSetting</a>
        </li>
        <li class="breadcrumb-item active">Index</li>
    </ol>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> EmailSetting
        </div>
        <div class="card-body">
            @if (Model != null)
            {
                <div class="row">
                    <div class="col-md-12 text-center">
                        <a class="btn btn-outline-success" href="/Admin/EmailSetting/Edit?id=@Model.EmailSettingsId"><i class="fa fa-edit"></i>Edit</a>
                    </div>
                    <div class="col-md-12">
                        <p class="text-warning">Sender Email:</p>
                        <p>@Model.SenderEmail</p>
                    </div>
                    <div class="col-md-12">
                        <p class="text-warning">SMTP Host Name:</p>
                        <p>@Model.HostName</p>
                    </div>
                    <div class="col-md-12">
                        <p class="text-warning">SMTP Port Number:</p>
                        <p>@Model.PortName</p>
                    </div>
                    <div class="col-md-12">
                        <p class="text-warning">Display Name:</p>
                        <p>@Model.DisplayName</p>
                    </div>
                    <div class="col-md-12">
                        <p class="text-warning">Username:</p>
                        <p>@Model.Username</p>
                    </div>
                    <div class="col-md-12">
                        <p class="text-warning">Password:</p>
                        <p>@Model.Password</p>
                    </div>
                </div>
            }
            else
            {
                <div class="row">

                    <div class="col-md-12 text-center">
                        <a href="/Admin/EmailSetting/Create" class="btn btn-outline-primary"><i class="fa fa-plus"></i>Create</a>
                    </div>
                </div>
            }

        </div>
    </div>
</div>