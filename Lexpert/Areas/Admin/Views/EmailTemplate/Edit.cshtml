@model MailBodyContent
@{
    ViewData["Title"] = "Update";
}


<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/Admin/EmailTemplate/Index">EmailTemplate</a>
        </li>
        <li class="breadcrumb-item active">Update</li>
    </ol>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> EmailTemplate
        </div>
        <div class="card-body">
            <div class="form-group">

                <form asp-area="Admin" asp-controller="EmailTemplate" asp-action="Update" method="post" enctype="multipart/form-data">
                    @Html.HiddenFor(s => s.Id)
                    <div class="form-group">
                        <label class="control-label">Gretting lines</label>
                        <textarea asp-for="GreetingHeader" class="summernote" required></textarea>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Body lines</label>
                        <textarea asp-for="MiddleContent" class="summernote" required></textarea>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Regards lines</label>
                        <textarea asp-for="FooterContent" class="summernote" required></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
@section Scripts {

    <script>
        $(document).ready(function () {
            $('.dropify').dropify();
            $('.summernote').summernote({
                tabsize: 2,
                height: 200
            });
        });

    </script>
}