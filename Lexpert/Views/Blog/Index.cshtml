@model IEnumerable<BlogPost>
@{
    ViewData["Title"] = "Index";
}
<hr class="offset-lg">
<hr class="offset-lg">
<div class="">

    <div class="row">

        <div class="col-sm-12 col-md-12 item">
            <div class="text-center">
                <div style="background-color:white">
                    <h2 class="h3 black">Blog</h2>
                </div>
            </div>
        </div>
    </div>

</div>
<div class="blog">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-6 item">

                    <div class="body">

                        <a href="/Blog/Post?id=@item.BlogId">
                            <img src="@Url.Content(item.BlogImage)">
                        </a>

                        <div class="caption">
                            <h1 class="h3">@item.BlogTitle</h1>
                            <hr class="offset-sm">

                            <a href="/Blog/Post?id=@item.BlogId"> View article <i class="ion-ios-arrow-right"></i> </a>
                        </div>
                    </div>
                </div>
            }

        </div>

    </div>
</div>
